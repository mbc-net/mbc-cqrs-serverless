{
  "$schema": "http://json-schema.org/schema",
  "$id": "SchematicsNestController",
  "title": "Nest Controller Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the controller.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the controller?"
    }
  },
  "required": ["name"]
}
